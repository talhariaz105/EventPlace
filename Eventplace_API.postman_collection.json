        {
            "name": "Upload",
            "item": [
                {
                    "name": "Multipart Upload",
                    "item": [
                        {
                            "name": "Initiate Upload",
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "Content-Type",
                                        "value": "application/json"
                                    }
                                ],
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\n  \"fileName\": \"large-video.mp4\",\n  \"filetype\": \"video/mp4\"\n}"
                                },
                                "url": {
                                    "raw": "{{baseUrl}}/upload/initiate-upload",
                                    "host": [
                                        "{{baseUrl}}"
                                    ],
                                    "path": [
                                        "upload",
                                        "initiate-upload"
                                    ]
                                },
                                "description": "Initiate multipart upload for large files. Returns uploadId to be used in subsequent requests."
                            },
                            "response": []
                        },
                        {
                            "name": "Generate Presigned URLs",
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "Content-Type",
                                        "value": "application/json"
                                    }
                                ],
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\n  \"fileName\": \"large-video.mp4\",\n  \"uploadId\": \"{{uploadId}}\",\n  \"filetype\": \"video/mp4\",\n  \"numChunks\": 10\n}"
                                },
                                "url": {
                                    "raw": "{{baseUrl}}/upload/generate-presigned-url",
                                    "host": [
                                        "{{baseUrl}}"
                                    ],
                                    "path": [
                                        "upload",
                                        "generate-presigned-url"
                                    ]
                                },
                                "description": "Generate presigned URLs for uploading file chunks. Returns array of URLs for each chunk (1-1000 chunks)."
                            },
                            "response": []
                        },
                        {
                            "name": "Complete Upload",
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "Content-Type",
                                        "value": "application/json"
                                    }
                                ],
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\n  \"fileName\": \"large-video.mp4\",\n  \"uploadId\": \"{{uploadId}}\"\n}"
                                },
                                "url": {
                                    "raw": "{{baseUrl}}/upload/complete-upload",
                                    "host": [
                                        "{{baseUrl}}"
                                    ],
                                    "path": [
                                        "upload",
                                        "complete-upload"
                                    ]
                                },
                                "description": "Complete the multipart upload after all chunks have been uploaded"
                            },
                            "response": []
                        }
                    ],
                    "description": "Multipart upload endpoints for large files (videos, large documents)"
